<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.Openingsuren" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="OpeningsurenTheme" parent="Theme.Openingsuren">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="searchLabel" parent="lightShadowedText">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/darker</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="openOrClosed">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="lightShadowedText">
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="darkShadowedText">
        <item name="android:shadowColor">@color/darker</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="listTitle" parent="lightShadowedText">
        <item name="android:textColor">@color/darker</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="listSubtitle" parent="lightShadowedText">
        <item name="android:textColor">@color/darker</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    
    <style name="listDetail">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="phone" parent="listDetail">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="tableHeader" parent="listDetail">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <style name="message" parent="darkShadowedText">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

	<style name="muted">
		<item name="android:textColor">@color/base</item>
		<item name="android:paddingTop">10dp</item>
	</style>
</resources>